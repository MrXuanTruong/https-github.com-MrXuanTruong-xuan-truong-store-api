@{
    ViewBag.Title = "Thêm mới nhãn hiệu";
}<div class="ui-breadcrumbs">
    <a href="/admin/brand">
        <span class="ui-breadcrumb__item"> < Quay lại danh sách</span>
    </a>
</div>
<div class="row" v-if="brand != null">
    <div class="col-md-8 grid-margin stretch-card">
        <div class="card">
            <h4 class="card-title">@ViewBag.Title</h4>
            <div class="card-body">
                <form class="forms-sample" id="brand-form">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row">
                                <label for="product-name" class="col-sm-3 col-form-label">Tên nhãn hiệu</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="brand-name" v-model="brand.brandName" required :disabled="isEdit">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="brand-image-url" class="col-sm-3 col-form-label">Logo</label>
                                <div class="col-sm-9">
                                    <upload-file :origin-url="brand.logo"
                                                 :object-type="'brand'"
                                                 @@on-upload-completed="onUploadedLogo"></upload-file>
                                </div>
                            </div>
                            <div class="form-group col-md-12 row">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-9">
                                    <error-list :errors="errors"></error-list>
                                </div>
                            </div>
                            <div class="form-group col-md-12 row">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-9">
                                    <button type="button" v-on:click="onClickUpdate" class="btn btn-primary btn-sm">
                                        Lưu thay đổi
                                    </button>
                                    <button type="button" @@click="onClickBtnGotoList" class="btn btn-light btn-icon-prepend btn-sm">
                                        <i class="fa fa-arrow-left"></i>
                                        Trở lại danh sách
                                    </button>
                                    <button type="button" v-on:click="onClickAddNew" class="btn btn-light btn-icon-prepend btn-sm" v-if="brand.BrandId!==0">
                                        <i class="fa fa-plus"></i>
                                        Tạo mới
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @*<script src="~/js/services/populate.service.js" asp-append-version="true"></script>*@
    <script src="~/admin/js/features/check-box.component.js"></script>
    <script src="~/admin/js/features/group-check-box.component.js"></script>
    <script src="~/js/services/brand-service .js" asp-append-version="true"></script>
    <script src="~/js/services/upload-file.service.js" asp-append-version="true"></script>
    <script src="~/admin/js/features/upload-files.component.js" asp-append-version="true"></script>
    <script src="~/admin/js/features/upload-file.component.js" asp-append-version="true"></script>

}


@model LoginViewModel
@{
    Layout = "_LayoutLogin";
    ViewBag.Title = "Login";
}

<div class="container-scroller d-flex" id="page-content">
    <div class="container-fluid page-body-wrapper full-page-wrapper d-flex">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-4 px-4 px-sm-4 rounded-top border-bottom text-center">
                        <partial name="_LogoLogin" />
                    </div>
                    <div class="auth-form-light text-left py-4 px-4 px-sm-4 rounded-bottom">
                        <form class="pt-3 form-login" method="post">

                            <error-list :errors="errors"></error-list>

                            <div class="form-group">
                                <input v-model="username" type="text" class="form-control form-control-lg" v-on:keyup.enter="onClickBtnLogin" />
                            </div>
                            <div class="form-group">
                                <input v-model="password" type="password" class="form-control form-control-lg" v-on:keyup.enter="onClickBtnLogin" />
                            </div>
                            <div class="mt-3 MB-2">
                                <button type="button" :disabled="isSubmit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" v-on:click="onClickBtnLogin">ĐĂNG NHẬP</button>
                            </div>
                            <div class="my-2 d-flex justify-content-between align-items-center">
                                <div class="custom-control custom-checkbox mr-sm-2">
                                    <input type="checkbox" class="custom-control-input" id="customControlAutosizing" v-model="isRemember">
                                    <label class="custom-control-label" for="customControlAutosizing">Ghi nhớ mặt khẩu</label>
                                </div>
                                <a href="/admin/login/forgotpassword" class="auth-link text-black">Quên mật khẩu?</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->

@section Scripts{
    <script src="~/js/shared/components/error.list.component.js" asp-append-version="true"></script>
    <script src="~/js/services/operator-service.js" asp-append-version="true"></script>
}
